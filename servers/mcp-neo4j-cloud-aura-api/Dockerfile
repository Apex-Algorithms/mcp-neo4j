FROM python:3.10-alpine

# Install build dependencies
RUN apk add --no-cache gcc musl-dev libffi-dev openssl-dev

# Use repository root as context, but set workdir to the MCP server subdirectory
WORKDIR /app/servers/mcp-neo4j-cloud-aura-api

# Copy the entire repository into /app
# The Docker build context is set to the repository root
COPY . /app

# Upgrade pip and install the package from the mcp server directory
RUN pip install --upgrade pip && \
    pip install --ignore-installed --no-cache-dir .

# Command to run the MCP server
CMD ["mcp-neo4j-aura-manager"]
